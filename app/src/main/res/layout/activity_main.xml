<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    tools:context=".MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/head" />


        <TextView
            android:id="@+id/title_msg1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_img"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="-8sp"
            android:text="find"
            android:textColor="@color/white2"
            android:textSize="38sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/title_msg2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_msg1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="-8sp"
            android:text="the perfect"
            android:textColor="@color/white2"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_msg"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_msg2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="-8sp"
            android:text="place"
            android:textColor="@color/white2"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stitle1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_msg"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="post your requirements and get "
            android:textColor="@color/white2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stitle"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stitle1"
            android:layout_marginStart="15dp"
            android:text="highly relevant matches"
            android:textColor="@color/white2"
            android:textSize="14sp" />


    <Button
        android:id="@+id/start"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background"
        android:shadowRadius="5"
        android:text="let's go"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="@color/lblue" />






    </RelativeLayout>

