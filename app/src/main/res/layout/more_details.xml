<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.More_details"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/white2"
        app:titleTextColor="@color/charcoal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Ttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Property Details"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@+id/toolbarr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="304dp"
            app:iss_auto_cycle="true"
            app:iss_period="2000"
            app:iss_delay="0"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/prop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Whitespace house"
            android:textColor="@color/charcoal"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/prop_categ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/prop_name"
            android:text="category"
            android:textColor="@color/charcoal"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="19dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/prop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prop_name"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="34dp"
            android:text="type"
            android:textColor="@color/charcoal"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay0"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/prop_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prop_type"
            android:layout_marginStart="10dp"
            android:text="location"
            android:textColor="@color/charcoal"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />


    </LinearLayout>


    <TextView
        android:id="@+id/prop_desc"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/lay2"
        android:layout_marginStart="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:scrollbars="vertical"
        android:textColor="@color/charcoal"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/amenities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prop_desc"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/beds"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/textview_background"
            android:drawableTop="@drawable/ic_baseline_single_bed_24"
            android:text="bedrooms"
            android:textColor="@color/charcoal"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/parking"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/textview_background"
            android:drawableTop="@drawable/ic_baseline_directions_car_24"
            android:text="parking"
            android:textColor="@color/charcoal"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/water"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/textview_background"
            android:drawableTop="@drawable/ic_baseline_pool_24"
            android:text="water"
            android:textColor="@color/charcoal"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/power"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/textview_background"
            android:drawableTop="@drawable/ic_baseline_power_24"
            android:text="power"
            android:textColor="@color/charcoal"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/wifi"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/textview_background"
            android:drawableTop="@drawable/ic_baseline_wifi_24"
            android:text="wifi"
            android:textColor="@color/charcoal"
            android:textSize="11sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rbok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amenities"
        android:layout_marginStart="35dp"
        android:layout_marginTop="22dp">

        <TextView
            android:id="@+id/Prop_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="12900 "
            android:textColor="@color/charcoal"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Tmon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Prop_cost"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Month"
            android:textColor="@color/charcoal"
            android:textSize="16sp" />

        <Button
            android:id="@+id/booking"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_toEndOf="@+id/Prop_cost"
            android:background="@drawable/background"
            android:text="Book"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:backgroundTint="@color/lblue" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/owners_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbok"
        android:layout_marginStart="35dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/od"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Agent"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/owners_name9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="felix gitau"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/prop_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/owners_name9"
            android:text="0106289042"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/od"
            android:layout_marginLeft="240dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@+id/watsapp"
            android:layout_toRightOf="@+id/prop_owner"
            android:background="@drawable/ic_baseline_local_phone_24" />

        <TextView
            android:id="@+id/watsapp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/od"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/whatsapp" />

    </RelativeLayout>




</RelativeLayout>